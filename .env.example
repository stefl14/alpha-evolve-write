# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Development Configuration
DEVELOPMENT_MODE=true  # Set to false for production
USE_MOCK_LLM=true     # Set to false to use real API calls
MODEL_NAME=gpt-3.5-turbo  # Use cheaper model for development

# Application Configuration
LOG_LEVEL=INFO
MAX_GENERATIONS=10
INITIAL_DRAFT_COUNT=5
TOP_K_SELECTION=3
MAX_TOKENS=1000       # Limit tokens to control costs

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080

# Evaluation Configuration
ELO_STARTING_SCORE=1500
EVALUATION_MODE=llm_judge  # Options: llm_judge, pairwise_tournament

# Essay Generation Settings
DEFAULT_MODE=general  # Options: creative, general, formal, technical

# Rate Limiting (requests per minute)
API_RATE_LIMIT=10